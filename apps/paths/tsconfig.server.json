{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "dist",
    "target": "ES2020",
    "isolatedModules": false,
    "noEmit": false,
    "inlineSourceMap": true,
    "esModuleInterop": false,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/server/*.ts"]
}
